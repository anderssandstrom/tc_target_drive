record(ai,"$(P)${DEV_NAME}-PosAct"){
  field(PINI, "1")
  field(DTYP, "asynFloat64")
  field(INP,  "@asyn($(PORT),0,1)ADSPORT=852/GVL.astAxes[${AXIS_INDEX}].stStatus.fActPosition?")
  field(SCAN, "I/O Intr")
  field(LINR, "SLOPE")
  field(ESLO, "1")
  field(EOFF, "0")   
  field(EGU,  "mm")
  field(LOLO, "-5")
  field(LOW,  "-4")
  field(HIGH, "4")
  field(HIHI, "5")
  field(PREC, "3")
  field(LLSV, "MAJOR")
  field(HHSV, "MAJOR")
  field(HSV,  "MINOR")
  field(LSV,  "MINOR")
  field(DESC, "${DEV_NAME}: Actual position")
}

